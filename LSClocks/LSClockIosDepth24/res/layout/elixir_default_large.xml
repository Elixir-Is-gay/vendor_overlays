<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.shared.clocks.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_minus37sdp"
    android:layout_gravity="center_horizontal|center_vertical">
<FrameLayout
	android:layout_width="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
	android:layout_height="match_parent">

    <LinearLayout
		android:gravity="center"
		android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_minus37sdp"
        android:orientation="vertical"
		android:layout_width="wrap_content"	
		android:layout_height="wrap_content">
  
        <TextClock 
            android:textSize="20.0sp"
            android:fontFamily="@font/evt-date"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:textColor="#ffffffff" 
            android:format12Hour="EEEE dd MMMM"
            android:format24Hour="EEEE dd MMMM" />

        <TextClock
			android:textSize="90.0sp"
			android:gravity="center"
            android:fontFamily="@font/evt"
            android:layout_marginTop="@dimen/_minus14sdp"
            android:textStyle="bold"
			android:maxLines="1"
            android:layout_weight="0"   	
			android:textColor="#ffffffff"	  
			android:layout_width="wrap_content"	 
			android:layout_height="wrap_content"
            android:format12Hour="hh:mm"
            android:format24Hour="kk:mm"/>
      
    </LinearLayout>
       
    <ImageView
        android:id="@+id/depthClockImageView"
        android:layout_width="@dimen/_350sdp"
	    android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:alpha="1.0"
        android:src="@drawable/gen"/>
</FrameLayout>
</com.android.systemui.shared.clocks.ClockLayout>
